{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": [
    "**/dist",
    "node_modules",
    "**/node_modules",
    "test/types",
    "modules/test.ava",
    "test.ava/types",
    "packages/**/node_modules"
  ]
}
